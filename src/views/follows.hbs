<nav id="follows-nav">
  <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">

    <button class="nav-link link-dark active border-0 d-flex justify-content-center py-0" id="nav-followers-tab" 
    data-bs-toggle="tab" data-bs-target="#nav-followers" 
    type="button" role="tab" 
    aria-controls="nav-followers" aria-selected="true"
    style="border-radius: 0;">
        <div class="position-relative d-flex align-items-center" style="width: fit-content; height: 52px;">
            <div>Followers</div>
            <div class="position-absolute bottom-0 w-100" style="height: 4px; background-color: black; border-radius: 2px;" id="tab-select-indicator"></div>
        </div>
    </button>

    <button class="nav-link link-dark border-0 d-flex justify-content-center py-0" id="nav-following-tab" 
    data-bs-toggle="tab" data-bs-target="#nav-following" 
    type="button" role="tab" 
    aria-controls="nav-following" aria-selected="false"
    style="border-radius: 0;">
        <div class="position-relative d-flex align-items-center" style="width: fit-content; height: 52px;">
            <div>Following</div>
            <div class="position-absolute bottom-0 w-100" style="height: 4px; background-color: black; border-radius: 2px;" id="tab-select-indicator"></div>
        </div>
    </button>

  </div>
</nav>

<hr style="margin: 0;">

<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane show active tab-content" id="nav-followers" role="tabpanel" aria-labelledby="nav-followers-tab">
    {{#each followers}}
    <div class="post card mb-3 border-0">
        <div class="post-header card-header d-flex align-items-start justify-content-between bg-white border-0">
            <div class="d-flex align-items-start">
                <a href="/{{username}}" class="me-3">
                    <img src="{{profilePicture}}" alt="Avatar" class="avatar rounded-circle" style="width: 40px; height: 40px;">
                </a>
                <div class="post-info">
                    <a href="/{{username}}" class="username text-dark">
                        <div class="fw-bold">{{fullName}} ({{username}})</div>
                    </a>
                    <div style="max-height: 48px; overflow: hidden; text-overflow: ellipsis; line-height: 24px; white-space: normal;">{{description}}</div>
                </div>
            </div>
            <div class="my-1 mx-4">
                {{#if followable}} {{#if following}}
                    <button class="btn btn-outline-dark btn-sm position-relative justify-content-center align-items-center" id="follow-button" data-action="unfollow" data-username="{{username}}" data-id="{{id}}" style="min-width: 94px;" onmouseenter="hoverFollowButton(event)" onmouseleave="unHoverFollowButton(event)">Following</button>
                {{else}}
                    <button class="btn btn-dark position-relative btn-sm justify-content-center align-items-center" id="follow-button" data-action="follow" data-username="{{username}}" data-id="{{id}}" style="min-width: 94px;" onmouseenter="hoverFollowButton(event)" onmouseleave="unHoverFollowButton(event)">Follow</button>
                {{/if}} {{/if}}
            </div>
        </div>
    </div>
{{#unless @last}}
    <hr style="margin: 0;">
{{/unless}}
{{/each}}
  </div>
  <div class="tab-pane tab-content" id="nav-following" role="tabpanel" aria-labelledby="nav-following-tab">
    {{#each followees}}
    <div class="post card mb-3 border-0">
        <div class="post-header card-header d-flex align-items-start justify-content-between bg-white border-0">
            <div class="d-flex align-items-start">
                <a href="/{{username}}" class="me-3">
                    <img src="{{profilePicture}}" alt="Avatar" class="avatar rounded-circle" style="width: 40px; height: 40px;">
                </a>
                <div class="post-info">
                    <a href="/{{username}}" class="username text-dark">
                        <div class="fw-bold">{{fullName}} ({{username}})</div>
                    </a>
                    <div style="max-height: 48px; overflow: hidden; text-overflow: ellipsis; line-height: 24px; white-space: normal;">{{description}}</div>
                </div>
            </div>
            <div class="my-1 mx-4">
                {{#if followable}} {{#if following}}
                    <button class="btn btn-outline-dark btn-sm position-relative justify-content-center align-items-center" id="follow-button" data-action="unfollow" data-username="{{username}}" data-id="{{id}}" style="min-width: 94px;" onmouseenter="hoverFollowButton(event)" onmouseleave="unHoverFollowButton(event)">Following</button>
                {{else}}
                    <button class="btn btn-dark position-relative btn-sm justify-content-center align-items-center" id="follow-button" data-action="follow" data-username="{{username}}" data-id="{{id}}" style="min-width: 94px;" onmouseenter="hoverFollowButton(event)" onmouseleave="unHoverFollowButton(event)">Follow</button>
                {{/if}} {{/if}}
            </div>
        </div>
    </div>
{{#unless @last}}
    <hr style="margin: 0;">
{{/unless}}
{{/each}}
  </div>
</div>