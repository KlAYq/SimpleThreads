<!-- post -->
<div class="post">
    <div class="post-header">
        <img src="/images/avatar.png" alt="Avatar" class="avatar">
        <div class="post-info">
            <span class="username">Red Sus</span>
        </div>
    </div>
    <div class="post-description">
        <form action="#" id="post-form">
            <label for="post-details">
            </label>
            <textarea id="post-details" class="bio-input form-control" maxlength="300" form="post-form" rows="10" cols="50" placeholder="Write something..." style="resize: none"></textarea>
            <div class="btn rounded-3 btn-light border-1 border border-dark-subtle my-4 d-flex align-items-center justify-content-center text-center" style="height: 6rem; width: 10rem">
                <i class="bi bi-plus-square-dotted m-auto" size="10"></i>
            </div>
            <div class="d-flex align-content-center justify-content-center gap-2">
                <button type="submit" class="btn btn-outline-dark">Cancel</button>
                <button type="submit" class="btn btn-dark">Post</button>
            </div>
        </form>
    </div>
</div>