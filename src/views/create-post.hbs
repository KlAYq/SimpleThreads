<!-- post -->
<div class="post">
    <div class="post-header card-header d-flex align-items-center bg-white border-0">
        <a href="/{{username}}" class="me-3">
            <img src="/{{avatar}}" alt="Avatar" class="avatar rounded-circle">
        </a>
        <div class="post-info">
            <a href="/{{username}}" class="username text-dark">
                <div class="fw-bold">{{name}} ({{username}})</div>
            </a>
        </div>
    </div>
    <div class="post-description">
        <form action="/create-post" method="POST" id="post-form">
            <label for="post-details">
            </label>
            <textarea id="post-details" name="description" class="bio-input form-control" maxlength="300" form="post-form" rows="10" cols="50" placeholder="Write something..." style="resize: none"></textarea>
            <div class="btn rounded-3 btn-light border-1 border border-dark-subtle my-4 d-flex align-items-center justify-content-center text-center" style="height: 6rem; width: 10rem">
                <i class="bi bi-plus-square-dotted m-auto" size="10"></i>
            </div>
            <input type="file" name="image" id="image-upload" style="display: none;">

            <div class="d-flex align-content-center justify-content-center gap-2 mt-3">
                <button type="button" class="btn btn-outline-dark" onclick="window.history.back()">Cancel</button>
                <button type="submit" class="btn btn-dark">Post</button>
            </div>
        </form>
    </div>
</div>